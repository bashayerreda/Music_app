<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_color_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TipsFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:background="@drawable/view_pagger_background"
        app:layout_constraintBottom_toTopOf="@id/btn_getstarted"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/onboardingVp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/indicatorsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        app:layout_goneMarginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:text="@string/Skip"
        android:textColor="@color/custom_color_primary"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/viewCenterOfNext"
        android:layout_width="1dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_getstarted"
        app:layout_constraintEnd_toEndOf="@id/btn_getstarted"
        app:layout_constraintStart_toStartOf="@id/btn_getstarted"
        app:layout_constraintTop_toTopOf="@id/btn_getstarted"
        android:layout_height="1dp"/>




    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_getstarted"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        app:cornerRadius="20dp"
        android:text="@string/Get_Started"
        android:backgroundTint="@color/custom_color_secondry"
        android:textAllCaps="false"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_50sdp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

